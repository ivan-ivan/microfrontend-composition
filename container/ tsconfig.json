{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "target": "ES6",
    "rootDir": "./src",
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "types": ["jest", "node", "@types/jest", "@types/testing-library__jest-dom"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}